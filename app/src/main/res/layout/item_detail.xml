<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/title_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_label" />

    <EditText
        android:id="@+id/title"
        android:inputType="textMultiLine"
        android:lines="4"
        android:minLines="2"
        android:gravity="top|left"
        android:maxLines="6"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:scrollbars="vertical"/>

    <TextView
        android:id="@+id/details_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/details_label" />

    <EditText
        android:id="@+id/details"
        android:inputType="textMultiLine"
        android:lines="4"
        android:minLines="2"
        android:gravity="top|left"
        android:maxLines="6"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:scrollbars="vertical"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/creation_date_container">
        <TextView
            android:id="@+id/creation_date_label"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="@string/creation_date_label" />
        <TextView
            android:id="@+id/creation_date"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="12/12/12"
            android:textAppearance="?attr/textAppearanceListItem"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/is_completed_container">
        <TextView
            android:id="@+id/completed_label"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="@string/is_completed_label" />

        <CheckBox
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:id="@+id/is_completed"/>
    </LinearLayout>


</LinearLayout>
